<header class="d-flex justify-content-between align-items-center py-8">
  <div class="headerLeft d-flex align-items-center">
    <h2 class="headerAdminTitle">Admin</h2>
    <!-- Button trigger modal -->
    <a
      class="btnAddModal d-flex align-items-center fw-bold"
      data-bs-toggle="modal"
      data-bs-target="#addBackdrop"
    >
      <span class="headerAdminAdd material-icons-outlined"> add </span>
      Add New Admin
    </a>
  </div>

  <div class="headerRight">
    <a href="#"><span class="material-icons-outlined me-6"> search </span></a>
    <a href="#"><span class="material-icons"> notifications_active </span></a>
  </div>
</header>

<!-- Add Modal -->
<div
  class="modal fade"
  id="addBackdrop"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  tabindex="-1"
  aria-labelledby="staticBackdropLabel"
  aria-hidden="true"
>
  <form>
    <div class="modal-dialog modal-dialog-scrollable">
      <div class="adminModalContent modal-content rounded-0">
        <div class="adminModalHeader modal-header border-0">
          <h3 class="adminModalTitle modal-title" id="staticBackdropLabel">
            New Admin
          </h3>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="adminModalBody modal-body pb-8">
          <!-- Account -->
          <div class="adminModalAccount">
            <h4 class="adminModalSubTitle mb-4">Account</h4>
            <label for="addNameControlInput" class="form-label mb-1"
              >Name</label
            >
            <input
              type="text"
              class="form-control mb-4"
              id="addNameControlInput"
            />
            <label for="addEmailControlInput" class="form-label mb-1"
              >Email</label
            >
            <input
              type="email"
              class="form-control"
              id="addEmailControlInput"
            />
          </div>
          <!-- Verification -->
          <div class="adminModalVerification">
            <h4 class="adminModalSubTitle mb-4">Verification</h4>
            <div class="mb-4">
              <span class="material-icons align-middle text-danger me-2">
                report_problem
              </span>
              <span class="align-middle fw-bold"> Unverified </span>
            </div>
            <button type="button" class="btn btn-outline-success w-100 fw-bold">
              Send Verification Mail
            </button>
          </div>
          <!-- Access Level -->
          <div class="adminModalAccess">
            <h4 class="adminModalSubTitle mb-4">Access Level</h4>
            <select class="form-select" aria-label="Default select">
              <option selected>-Choose access level-</option>
              <option value="Student">Student</option>
              <option value="Teacher">Teacher</option>
              <option value="Admin">Admin</option>
            </select>
          </div>
          <!-- Custom Access -->
          <div class="adminModalCustom">
            <h4 class="adminModalSubTitle mb-4">Custom Access</h4>
            <div class="form-check mb-4">
              <input
                class="form-check-input rounded-0"
                type="checkbox"
                value=""
                id="addLecture"
              />
              <label class="form-check-label" for="addLecture"> Lecture </label>
            </div>
            <div class="form-check mb-4">
              <input
                class="form-check-input rounded-0"
                type="checkbox"
                value=""
                id="addCoupon"
              />
              <label class="form-check-label" for="addCoupon"> Coupon </label>
            </div>
            <div class="form-check mb-4">
              <input
                class="form-check-input rounded-0"
                type="checkbox"
                value=""
                id="addMessage"
              />
              <label class="form-check-label" for="addMessage"> Message </label>
            </div>
            <div class="form-check mb-4">
              <input
                class="form-check-input rounded-0"
                type="checkbox"
                value=""
                id="addSetting"
              />
              <label class="form-check-label" for="addSetting"> Setting </label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input rounded-0"
                type="checkbox"
                value=""
                id="addTaskMenu"
              />
              <label class="form-check-label" for="addTaskMenu">
                Task Menu
              </label>
            </div>
          </div>
        </div>
        <div class="adminModalFooter modal-footer border-0">
          <button
            type="button"
            class="adminModalCancelBtn btn btn-outline-success"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button type="submit" class="adminModalAddBtn btn btn-success ms-4">
            Add
          </button>
        </div>
      </div>
    </div>
  </form>
</div>
